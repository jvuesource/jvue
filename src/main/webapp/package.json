{
  "name": "jvue",
  "version": "1.0.0",
  "description": "Next light-weight,responsive project With Vue,Spring Boot and Java Nashorn Script engine for server-side-rendering",
  "main": "src/app.js",
  "scripts": {
    "clean": "rimraf dist && rimraf ssrclientdist && rimraf ssrdist",
    "serve": "webpack-dev-server --progress --mode development",
    "build": "yarn run clean && webpack --mode production",
    "lint:js": "eslint . --ext .js --fix --color",
    "lint:vue": "eslint . --ext .vue --fix --color",
    "lint:css": "stylelint --config stylelint.config.js 'src/**/*.css' --fix --color",
    "lint": "yarn run lint:js && yarn run lint:vue && yarn run lint:css",
    "ssr:build-dev": "yarn run clean && node ./build/build.dev.js",
    "ssr:build": "yarn run clean && node ./build/build.prod.js"
  },
  "author": "Terwer",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-syntax-jsx": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-vue-jsx": "4.0.1",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.8",
    "eslint": "^5.12.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.7",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rimraf": "^2.6.3",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-browser-hacks": "^1.2.1",
    "url-loader": "^1.1.2",
    "vue": "^2.5.22",
    "vue-loader": "^15.5.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.22",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/runtime": "^7.3.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "bootstrap-vue": "^2.0.0-rc.11",
    "stylelint": "^9.10.1",
    "vue": "^2.5.22",
    "vue-content-loading": "^1.5.3",
    "vue-server-renderer": "^2.5.22",
    "vue-uweb": "^0.2.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        2,
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "semi": [
        "error",
        "always"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  }
}
