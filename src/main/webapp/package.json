{
  "name": "next-vue",
  "version": "1.0.0",
  "description": "next vue project",
  "main": "src/main.js",
  "scripts": {
    "clean": "rimraf dist && rimraf ssrclientdist && rimraf ssrdist",
    "serve": "webpack-dev-server --mode development",
    "build": "npm run clean && webpack --mode production",
    "lint": "eslint . --ext .js --fix --color",
    "ssr:build-client-dev": "webpack --mode development --renderMode ssr_client",
    "ssr:build-client": "webpack --mode production --renderMode ssr_client",
    "ssr:build-server-dev": "webpack --mode development --renderMode ssr_server",
    "ssr:build-server": "webpack --mode production --renderMode ssr_server",
    "ssr:build-dev": "npm run clean && npm run ssr:build-client-dev && npm run ssr:build-server-dev && mv ssrclientdist/js/client.js ssrdist/js/client.js && rimraf ssrclientdist && rimraf ssrdist/index.html",
    "ssr:build": "npm run clean && npm run ssr:build-client && npm run ssr:build-server && mv ssrclientdist/js/client.js ssrdist/js/client.js && rimraf ssrclientdist && rimraf ssrdist/index.html"
  },
  "author": "Terwer",
  "license": "Apache V2",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.8",
    "eslint": "^5.12.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.1.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.7",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "rimraf": "^2.6.3",
    "vue": "^2.5.22",
    "vue-loader": "^15.5.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.22",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bootstrap-vue": "^2.0.0-rc.11",
    "vue": "^2.5.22",
    "vue-server-renderer": "^2.5.22"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        2,
        {
          "vars": "local",
          "args": "none"
        }
      ],
      "semi": [
        "error",
        "always"
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  }
}
