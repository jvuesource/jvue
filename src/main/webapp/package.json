{
  "name": "next-vue",
  "version": "1.0.0",
  "description": "next vue project",
  "main": "src/main.js",
  "scripts": {
    "clean": "rimraf dist && rimraf ssrclientdist && rimraf ssrdist",
    "serve": "webpack-dev-server --mode development",
    "build": "rimraf dist && webpack --mode production",
    "build:client": "rimraf ssrclientdist && webpack --mode production --renderMode server:client",
    "build:server": "rimraf ssrdist && webpack --mode production --renderMode server:server",
    "build:server-bundle": "mv ssrclientdist/client.js ssrdist/client.js && rimraf ssrclientdist",
    "build:ssr": "npm run build:client && npm run build:server && npm run build:server-bundle"
  },
  "author": "Terwer",
  "license": "Apache V2",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.0.7",
    "mini-css-extract-plugin": "^0.5.0",
    "rimraf": "^2.6.3",
    "vue": "^2.5.22",
    "vue-loader": "^15.5.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.22",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "vue": "^2.5.22",
    "vue-server-renderer": "^2.5.22"
  }
}
